<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="616" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="tbusername" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="418" Height="40"/>
        <Button x:Name="bConnDisconn" Content="Connect" HorizontalAlignment="Left" Margin="438,10,0,0" VerticalAlignment="Top" Height="40" Width="155" Click="button_Click"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="237" Margin="10,55,0,0" VerticalAlignment="Top" Width="583"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="60" Margin="10,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="583" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
